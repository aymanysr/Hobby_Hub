<% group.posts.reverse.each do |post| %>
              <%= link_to group_smya_path(group, post) do %>
              <div data-controller= "show">
                <div class="postt-container" data-show-target="postt" id="post-<%= post.id %>">
                  <i class="fa-regular fa-envelope"></i>
                  <%= post.content %>
                </div>
                <button class="show-more" data-action="click->show#show" data-post-id="<%= post.id %>"><em>Show More &gt; </em></button>
              </div>
              <% end %>
<% end %>
